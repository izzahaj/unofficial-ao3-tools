{
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.py": [
      "cd backend && . .venv/bin/activate && ruff check --fix",
      "cd backend && . .venv/bin/activate && ruff format",
      "cd backend && . .venv/bin/activate && mypy"
    ]
  }
}
